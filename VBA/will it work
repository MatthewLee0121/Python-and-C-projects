import os

# Define the file path
file_path = r'C:\Users\mat_m\Coding_with_beans\VBA\wow'  # Replace with actual filename if needed

def update_file(file_path):
    # Read the file
    with open(file_path, "r") as file:
        lines = file.readlines()
    
    # Perform the modifications
    for i in range(15, 66):  # Start at line 15, stop at line 65, with a step of 26
        original_line_index = i - 1  # Python list indexing starts at 0
        target_line_index = original_line_index + 26
        
        if target_line_index < len(lines):  # Check to prevent out-of-index error
            # Append the original line to the target line, not the other way around
            lines[original_line_index] = lines[original_line_index].strip() + " + " + lines[target_line_index].strip() + "\n"

    # Write the modified content back to the file
    with open(file_path, "w") as file:
        file.writelines(lines)

# Run the function
update_file(file_path)
